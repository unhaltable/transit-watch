<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="ca.cryptr.transit_watch.activities.AddStopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_pane"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/filter_route"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:hint="@string/filter_routes"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/stop_transit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/activity_vertical_margin"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/add_route_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:textFilterEnabled="true" />

    </LinearLayout>

</LinearLayout>
