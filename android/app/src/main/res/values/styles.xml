<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/action_bar</item>
    </style>

    <style name="action_bar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/action_bar_title_text</item>
        <item name="android:background">@color/ttc_red</item>
    </style>

    <style name="action_bar_title_text" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="route_card_title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="route_card_content">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
