<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="ca.cryptr.transitwatch"
  android:versionCode="1"
  android:versionName="1.0" >
  <uses-sdk
    android:minSdkVersion="14"
    android:targetSdkVersion="19" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.INTERNET" />
  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    <activity
      android:name="ca.cryptr.transitwatch.MainActivity"
      android:label="@string/app_name" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="ca.cryptr.transitwatch.SettingsActivity"
      android:label="@string/title_activity_settings"
      android:parentActivityName="ca.cryptr.transitwatch.MainActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="ca.cryptr.transitwatch.MainActivity" />
    </activity>
    <activity
      android:name="ca.cryptr.transitwatch.AddTransitActivity"
      android:label="@string/title_activity_add_transit"
      android:parentActivityName="ca.cryptr.transitwatch.MainActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="ca.cryptr.transitwatch.MainActivity" />
    </activity>
    <activity
      android:name="ca.cryptr.transitwatch.AddRouteActivity"
      android:label="@string/title_activity_add_route"
      android:parentActivityName="ca.cryptr.transitwatch.AddTransitActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="ca.cryptr.transitwatch.AddTransitActivity" />
    </activity>
    <activity
      android:name="ca.cryptr.transitwatch.AddStopActivity"
      android:label="@string/title_activity_add_stop"
      android:parentActivityName="ca.cryptr.transitwatch.AddRouteActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="ca.cryptr.transitwatch.AddRouteActivity" />
    </activity>
  </application>
</manifest>